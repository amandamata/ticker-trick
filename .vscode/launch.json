{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "launch frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/ticker-trick-frontend",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "npm: start"
    },
    {
      "name": "launch api",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/ticker-trick-backend/main.go",
      "envFile": "${workspaceFolder}/ticker-trick-backend/.env"
    }
  ],
  "compounds": [
    {
      "name": "launch application",
      "configurations": ["launch api", "launch frontend"]
    }
  ]
}
